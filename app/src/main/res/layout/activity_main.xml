<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#FF6600"
    tools:context="ca.josephmendez.mode4201.tictactoe.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:id="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnS"
        android:layout_alignStart="@+id/btnE"
        android:id="@+id/btnSE"
        android:onClick="buttonOnClick (MainActivity)" />

    <TextView
        android:text="Click to Any Start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtView"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/btnSW"
        android:layout_toStartOf="@+id/btnS" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnS"
        android:onClick="buttonOnClick (MainActivity)"
        android:layout_above="@+id/txtView"
        android:layout_alignStart="@+id/btnNESW"
        android:layout_alignParentLeft="@+id/btnNESW"
        android:layout_alignParentTop="false"
        android:layout_alignWithParentIfMissing="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnW"
        android:onClick="buttonOnClick (MainActivity)"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/btnNW"
        android:layout_alignStart="@+id/btnNW" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnSW"
        android:onClick="buttonOnClick (MainActivity)"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/btnNESW"
        android:layout_alignStart="@+id/btnW" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnNE"
        android:onClick="buttonOnClick (MainActivity)"
        android:layout_marginEnd="19dp"
        android:layout_alignBaseline="@+id/btnN"
        android:layout_alignBottom="@+id/btnN"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnE"
        android:onClick="buttonOnClick (MainActivity)"
        android:layout_alignBaseline="@+id/btnNESW"
        android:layout_alignBottom="@+id/btnNESW"
        android:layout_alignStart="@+id/btnNE" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnNESW"
        android:onClick="buttonOnClick (MainActivity)"
        android:layout_alignBaseline="@+id/btnW"
        android:layout_alignBottom="@+id/btnW"
        android:layout_alignStart="@+id/btnN" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnNW"
        android:layout_marginTop="27dp"
        style="@style/Widget.AppCompat.Button"
        android:onClick="buttonOnClick (MainActivity)"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="19dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnN"
        android:onClick="buttonOnClick (MainActivity)"
        android:layout_alignBaseline="@+id/btnNW"
        android:layout_alignBottom="@+id/btnNW"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
